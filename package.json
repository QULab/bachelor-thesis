{
  "name": "bachelor-thesis",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "docker:build": "docker build -t sample:dev .",
    "docker:run": "docker run -p 5984:5984 -v ${PWD}/local.ini:/usr/local/etc/couchdb/local.d -d couchdb && docker run -v ${PWD}:/app -v /app/node_modules -p 3001:3000 --rm sample:dev",
    "start": "cd ui && npm run start",
    "build": "cd ui && npm run build",
    "test": "cd ui && npm run test",
    "eject": "cd ui && npm run eject",
    "lint": "eslint '{ui,code}/**/*.js'",
    "prettier": "prettier --write '**/*.{js,json}'",
    "process-texts": "source venv/bin/activate && python code/process_texts.py"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "node-html-parser": "^1.1.18",
    "request": "^2.88.0",
    "request-promise-native": "^1.0.8",
    "xlsx": "^0.15.4"
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-config-react-app": "^5.1.0",
    "eslint-plugin-import": "2.18.2",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.18.0",
    "husky": "^4.0.10",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1"
  },
  "browserslist": [
    ">0.2%",
    "not dead"
  ],
  "engines": {
    "node": ">=12.13.0 <13"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "git add"
    ]
  }
}
